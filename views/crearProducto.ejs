<!DOCTYPE html>
<html lang="en">
<head>

    <%- include ('./partials/head.ejs') %>
    
    <title>Crear nuevo producto</title>

</head>
<body>

<!-- -------- HEADER -------- -->
<%- include('./partials/header.ejs') %>

<!-- -------- MAIN -------- -->
<main>
        <h1>Crear nuevo producto</h1>
        
        <form action="/productos/crear" method="POST" enctype="multipart/form-data">
            <div>
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" value="Nombre" required>
            </div>
            <div>
                <label for="marca">Marca:</label>
                <input type="text" id="marca" name="marca" value="Marca" required>
            </div>
            <div>
                <label for="descripcion">Descripci√≥n:</label>
                <textarea id="descripcion" name="descripcion" value="Descripcion"></textarea>
            </div>
            <div>
                <label for="precio">Precio:</label>
                <input type="number" id="precio" name="precio" value="Precio" required>
            </div>
            <div>
                <label for="imagen">Imagen:</label>
                <input type="file" id="imagen" name="imagen">
            </div>
            <div>
                <a href="/productos"><button type="button">Cancelar</button></a>
                <a href="/"><button type="submit">Crear Producto</button></a>
            </div>
        </form>
</main>

<!-- -------- FOOTER -------- -->
<%- include('./partials/footer.ejs') %>

</body>
</html>