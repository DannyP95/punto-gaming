<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head.ejs') %>

    <% if (producto && producto.id) { %>
        <title>Editar <%= producto.nombre %></title>
    <% } else { %>
        <title>Producto no encontrado</title>
    <% } %>


</head>
<body>

<!-- -------- HEADER -------- -->
<%- include('./partials/header.ejs') %>

<!-- -------- MAIN -------- -->
<main>
    <% if (producto && producto.id) { %>
        <h1>Editar <%= producto.nombre %></h1>
        <form action="/productos/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div>
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" value="<%= producto.nombre %>" required>
            </div>
            <div>
                <label for="marca">Marca:</label>
                <input type="text" id="marca" name="marca" value="<%= producto.marca %>" required>
            </div>
            <div>
                <label for="descripcion">Descripci√≥n:</label>
                <textarea id="descripcion" name="descripcion"><%= producto.descripcion %></textarea>
            </div>
            <div>
                <label for="precio">Precio:</label>
                <input type="number" id="precio" name="precio" value="<%= producto.precio %>" required>
            </div>
            <div>
                <label for="imagen">Imagen:</label>
                <input type="file" id="imagen" name="imagen">
                <p>Imagen actual: <img src="/images/<%= producto.imagen %>" width="100"></p>
            </div>
            <div>
                <button type="submit">Actualizar</button>
                <a href="/productos"><button type="button">Cancelar</button></a>
            </div>
        </form>
    <% } else { %>
        <h1>PRODUCTO NO ENCONTRADO</h1>
    <% } %>
</main>

<!-- -------- FOOTER -------- -->
<%- include('./partials/footer.ejs') %>

</body>
</html>